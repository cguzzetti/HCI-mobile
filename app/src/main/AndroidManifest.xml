<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agusosimani.Homely">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:logo="@drawable/logo"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:label="Homely"
        android:configChanges="orientation|screenSize"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.example.agusosimani.Homely.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".device.AddDevice"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.agusosimani.Homely.MainActivity" />
        </activity>
        <activity
            android:name=".Help" />
        <activity
            android:name=".NotificationSettings"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.agusosimani.Homely.MainActivity" />
        </activity>
    </application>

</manifest>